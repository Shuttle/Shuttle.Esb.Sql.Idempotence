<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFrameworks>net5.0</TargetFrameworks>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="Microsoft.NET.Test.Sdk" Version="17.1.0" />
        <PackageReference Include="NUnit" Version="3.13.3" />
        <PackageReference Include="NUnit3TestAdapter" Version="4.2.1" />
        <PackageReference Include="Shuttle.Core.Castle" Version="10.1.1" />
        <PackageReference Include="Shuttle.Esb.Sql.Queue" Version="12.0.1" />
        <PackageReference Include="Shuttle.Esb.Tests" Version="12.0.1" />
        <PackageReference Include="Shuttle.Core.Data" Version="12.0.1" />
        <PackageReference Include="System.Data.SqlClient" Version="4.8.3" />
    </ItemGroup>

    <ItemGroup>
        <ProjectReference Include="..\Shuttle.Esb.Sql.Idempotence\Shuttle.Esb.Sql.Idempotence.csproj" />
    </ItemGroup>

    <ItemGroup>
        <None Update="files\Idempotence-Grouped.config">
            <CopyToOutputDirectory>Always</CopyToOutputDirectory>
        </None>
        <None Update="files\Idempotence.config">
            <CopyToOutputDirectory>Always</CopyToOutputDirectory>
        </None>
    </ItemGroup>

    <Target Name="ReSharperTestRunner" AfterTargets="AfterBuild">
        <Copy SourceFiles="App.config" DestinationFiles="$(OutDir)\ReSharperTestRunner.dll.config" />
    </Target>
</Project>
